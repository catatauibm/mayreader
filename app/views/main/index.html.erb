<div id="app">
	<header>
		<nav id="header-menu">
			
			<script type="text/javascript">
				$(function() {
				  $(".suspension-points").each(function() {
				  	var val = $(this).html();
				  	if (val.length > 10) {
				  	var new_val = val.substr(0,10).concat("...");
				  	$(this).html(new_val);
				  }
				  });
				});
			</script>
			
			<div id="selected-category"><a class="suspension-points" href="#"><%= @selected_category %></a></div>
			<div id="selected-site"><a class="suspension-points" href="#"><%= @selected_site %></a></div>
			
			<ul class="menu-category">
				<% @menu["categories"].each do |category| %>
				<li class="category"><%= link_to category["name"], {action: "index", :category => category["name"]}, :class => "suspension-points" %>
					<ul>
						<% category["sites"].each do |site| %>
							<% if (site != "-") %>
								<li class="site"><%= link_to site, {action: "index", :category => category["name"], :site => site}, :class => "suspension-points" %></li>
							<% end %>
						<% end %>
					</ul>
				</li>
				<% end %>
			</ul>
		</nav>
		<div class="reset-menu"></div>
		<!-- <div id="header-search-setting">
			<div id="header-search">
				<form>
					<input type="search" value="search" />
				</form>
			</div>
			<div id="header-setting">
				<form>
					<input type="image" src="setting.png" />
				</form>
			</div>
		</div> -->
	</header>
	
	
	<div id="main">
		<% @feeds.each do |feed| %>
			<h1><%= feed.title %></h1>
			<p><%= feed.url %></p>
			<br />
			<br />
			<% feed.entries.first(10).each_with_index do |entry, i| %>
			<article>
				<h2><%= i.to_s + ". " + entry.title %></h2>
				<p><%= entry.url %></p>
			</article>
			<br />
			<% end %>
			<br />
			<br />
		<% end %>
	</div>
	
	
	<footer>
		
	</footer>
</div>